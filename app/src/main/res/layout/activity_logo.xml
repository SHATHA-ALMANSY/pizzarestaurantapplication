<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Logo">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/lh" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="The Awesome"
        android:textAlignment="center"
        android:textColor="#272626"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Branded Shoese"
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/lh" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:text="Continue With Facebook"
            android:textAlignment="center"
            android:textColor="#272626" />

        <ImageView
            android:id="@+id/imageface"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/facebooke" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textinsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:text="Continue With Instgram"
            android:textAlignment="center"
            android:textColor="#272626" />

        <ImageView
            android:id="@+id/insta"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/insta" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textlocat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:text="Store location"
            android:textAlignment="center"
            android:textColor="#272626" />

        <ImageView
            android:id="@+id/gogle"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/gogle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:text="Login as admin"
            android:textAlignment="center"
            android:textColor="#272626" />

        <ImageView
            android:id="@+id/Admin"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/admin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageshope"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/now" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Shoese Store ."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>